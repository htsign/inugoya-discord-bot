{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noAssignInExpressions": "off"
      }
    }
  },
  "files": {
    "includes": ["**", "!!tsconfig.json", "!!**/node_modules"]
  }
}
