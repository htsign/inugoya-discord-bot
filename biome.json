{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "formatter": {
    "lineWidth": 140,
    "lineEnding": "lf",
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noAssignInExpressions": "off"
      }
    }
  },
  "files": {
    "experimentalScannerIgnores": ["tsconfig.json", "**/node_modules/**"]
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "quoteStyle": "single",
      "trailingCommas": "all",
      "bracketSameLine": true
    }
  }
}
